<% if product.avatar.present? %>
  <%= image_tag product.avatar.url, class: "img-fluid rounded shadow-sm mb-3" %>
<% end %>

<h5 class="card-title word-break mb-2"><%= product.name %></h5>
<p class="fs-4 fw-bold text-success mb-3">$<%= product.price %></p>
<p class="text-muted small"><%= product.description %></p>

<div class="d-grid gap-2 mt-4">
  <%= form_with model: @order_item, url: order_items_path do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.hidden_field :quantity, value: 1 %>
    <%= f.submit "Add to Cart", class: "btn btn-primary" %>
  <% end %>
  <a href="#" class="btn btn-outline-secondary">Add to Wishlist</a>
</div>
