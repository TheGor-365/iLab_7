<%= form_with(model: repair, html: { multipart: true }) do |form| %>

  <% if repair.errors.any? %>
    <div class="row p-5 shadow bg-white mb-5 border border-danger">
      <div id="error_explanation" class="danger">
        <h5><%= pluralize(repair.errors.count, "error") %> <span class="text-muted">prohibited this repair from being saved:</span></h5>
        <br>
        <ul>
          <% repair.errors.each do |error| %>
            <li>
              <small class="text-muted">
                <%= error.full_message %>
              </small>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :generation %><br>

    <div class="form-check">
      <%= form.radio_button(:generation_id, '1', class: 'form-check-input') %>
      <%= form.label :generation_5 %>
    </div>

    <div class="form-check">
      <%= form.radio_button(:generation_id, '2', class: 'form-check-input') %>
      <%= form.label :generation_6 %>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :phone %>

    <div class="form-check">
      <%= form.radio_button(:phone_id, '1', class: 'form-check-input') %>
      <%= form.label :phone_1 %>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :defect_id %>

    <div class="form-check">
      <%= form.radio_button(:defect_id, '1', class: 'form-check-input') %>
      <%= form.label :defect_1 %>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :repair_title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="row p-5 shadow bg-white mb-5">
    <div class="mb-3">
      <%= form.label :product_avatar, class: 'form-label mb-3' %><br>
      <%= form.file_field :avatar, id: 'new-avatar-field', type: 'file', class: 'form-control' %>
      <%= form.hidden_field :avatar_cache %>
    </div>

    <div class="row">
      <div class="mt-3 mb-3 col">
        <%= form.label "Current product avatar", class: 'form-label mb-3' %><br>

        <% if repair.avatar.present? %>
          <%= image_tag(repair.avatar.url, width: '300', class: 'img-thumbnail') %>
        <% else %>
          <%= image_tag('default_product_avatar.jpg', width: '300', class: 'img-thumbnail') %>
        <% end %>
      </div>

      <div class="mt-3 mb-3 col">
        <%= form.label "New product avatar preview", class: 'form-label mb-3' %><br>
        <img id="image-preview" src="#" width="300" height="200" class="img-thumbnail" />
      </div>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :spare_parts %>

    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">

      <% if repair.spare_parts.present? %>
        <%= form.check_box( {spare_parts: 'display' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_1') %>
        <%= form.label repair.spare_parts, for: 'module_1', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'corpus' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_2') %>
        <%= form.label repair.spare_parts, for: 'module_2', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'mainboard' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_3') %>
        <%= form.label repair.spare_parts, for: 'module_3', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'speaker' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_4') %>
        <%= form.label repair.spare_parts, for: 'module_4', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'rear camera' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_5') %>
        <%= form.label repair.spare_parts, for: 'module_5', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'front-facing camera' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_6') %>
        <%= form.label repair.spare_parts, for: 'module_6', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'battery' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_7') %>
        <%= form.label repair.spare_parts, for: 'module_7', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'lower loop' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_8') %>
        <%= form.label repair.spare_parts, for: 'module_8', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'higher loop' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_9') %>
        <%= form.label repair.spare_parts, for: 'module_9', class: 'btn btn-outline-primary' %>

        <%= form.check_box( {spare_parts: 'home button' }, autocomplete: 'off', class: 'btn-check align-middle', id: 'module_10') %>
        <%= form.label repair.spare_parts, for: 'module_10', class: 'btn btn-outline-primary' %>
      <% end %>
    </div>
    <br>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :description, class: 'mb-5' %>
    <%= form.rich_text_area :description, class: 'form-control' %>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :overview, class: 'mb-5' %>
    <%= form.rich_text_area :overview, class: 'form-control' %>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <div class="mb-3">
      <%= form.label :images, class: 'form-label mb-3' %><br>
      <%= form.file_field :images, type: 'file', multiple: true, class: 'form-control' %>
      <%= form.hidden_field :images_cache %>
    </div>

    <div class="mt-3 mb-3">
      <% if repair.images? %>
        <% repair.images.each do |image| %>
          <%= image_tag(image.url, width: '100') %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-3 mb-3 col">
      <%= form.label "Choosed images", class: 'form-label mb-3' %><br>
      <img id="image-preview" src="#" width="300" height="200" class="img-thumbnail" />
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label "Change ipnone repair videos", class: 'form-label mb-3' %><br>
    <%= form.file_field :videos, multiple: true, type: 'file', class: 'form-control' %>

    <div class="mt-5">
      <% if repair.videos? %>
        <%= video_tag(repair.videos, width: '340', height: '180', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') %>
      <% end %>
    </div>
  </div>

  <div class="row p-5 shadow bg-white mb-5 mt-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="mt-3 mb-3">
    <%= form.submit class: 'btn btn-sm btn-success' %>
  </div>
<% end %>


<script type="text/javascript">

  function readURL(input) {

    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#image-preview').attr('src', e.target.result);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#new-images-field").change(function(){
    readURL(this);
  });

</script>
