<% provide :page_title, @phone.model_title %>
<% currently_at 'iPhones' %>

<div class="row">

  <div class="col-2">
    <%= render 'phone_show_nav' %>
  </div>

  <div class="col-6 m-5 contents">

    <div class="row pt-4 pb-5 shadow bg-white mb-5 text-center header-nav">
      <p class="align-middle">
        <span id="gadget" class="anchorjs-link display-6 text-muted"><%= @phone.model_title %>
          <span class="text-muted display-6">
            <strong>show room</strong>
          </span>
        </span>
      </p>

      <i class="fas fa-2x fa-book-open text-muted pt-2"></i>
    </div>

    <div id="phone-image" class="row p-5 shadow bg-white">
      <span class="display-6 mb-3"><%= @phone.model_title %>
        <span id="photos" class="anchorjs-link text-muted display-6">
          photos
        </span>
      </span>
      <br>

      <% @phone.images.each do |image| %>
        <div class="col text-center mb-5">
          <%= image_tag(image.url, width: '300', class: 'rounded img-thumbnail shadow') %>
        </div>
      <% end %>
    </div>

    <div class="row mt-5 mb-2 p-5 shadow bg-white">
      <span class="display-6 mb-3"><%= @phone.model_title %>
        <span id="overview" class="anchorjs-link text-muted display-6">
          overview
        </span>
      </span>
      <%= @phone.model_overview %>
    </div>

    <div class="row mt-5 p-5 mb-4 bg-white shadow">
      <span class="display-6 mb-3"><%= @phone.model_title %>
        <span id="videos" class="anchorjs-link text-muted display-6">
          videos
        </span>
      </span>

      <% @phone.videos.each do |video| %>
        <small class="text-muted mb-5"><%= video.identifier %></small>
      <% end %>

      <div class="col">
        <%= video_tag(@phone.videos, width: '640', height: '380', controls: true, class: 'rounded card p-1 shadow mx-auto mb-5') if @phone.videos.present? %>
      </div>
    </div>

    <div class="list-inline-item mt-3">
      <%= link_to 'Edit', edit_phone_path(@phone), class: 'text-decoration-none me-2' %>
      <%= link_to 'Back', phones_path, class: 'text-decoration-none' %>
    </div>
  </div>

  <div class="col-3">
    <%= render 'phone_info_card' %>
  </div>
</div>
