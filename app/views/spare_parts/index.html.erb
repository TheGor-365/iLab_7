<% provide :page_title, 'iPhone Spare Parts' %>
<% currently_at 'iPhone Spare Parts' %>

<div class="container pt-5 pb-5">

  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">Spare Parts</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Generation</th>
          <th>Phone</th>
          <th>Module</th>
          <th>Name</th>
          <th>Manufacturer</th>
          <th>Images</th>
          <th>Videos</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @spare_parts.each do |spare_part| %>
          <tr>
            <td class="align-middle"><%= spare_part.id %></td>
            <td class="align-middle"><%= spare_part.generation_id %></td>
            <td class="align-middle"><%= spare_part.phone_id %></td>
            <td class="align-middle"><%= spare_part.mod_id %></td>
            <td class="align-middle"><%= spare_part.name %></td>
            <td class="align-middle"><%= spare_part.manufacturer %></td>

            <td class="align-middle">
              <% spare_part.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% spare_part.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><%= link_to 'Show', spare_part, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_spare_part_path(spare_part), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', spare_part, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Spare Part', new_spare_part_path, class: 'text-decoration-none' %>
  </div>
</div>
