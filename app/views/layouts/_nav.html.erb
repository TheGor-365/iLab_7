<% provide :nav do %>
  <header class="mb-5">
    <nav class="navbar navbar-expand-lg fixed-top border-bottom shadow-sm bg-light">
      <div class="container-fluid">

        <h3 class="navbar-brand mb-0">
          <%= link_to 'iLab', root_path, class: 'text-muted text-decoration-none' %>
        </h3>

        <!-- Кнопка гамбургер для мобильных -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="bi bi-list dark" style="font-size: 1.5rem;"></i>
        </button>


        <!-- Контент меню -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">

            <li class="nav-item">
              <%= nav_tab 'Store', store_path, class: "nav-link text-success", current_page: current_page %>
            </li>

            <li class="nav-item"><%= nav_tab 'iPhones', phones_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Generations', generations_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Models', models_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Modules', mods_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Spare Parts', spare_parts_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Defects', defects_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'iPhone Repairs', repairs_path, class: "nav-link", current_page: current_page %></li>

            <li class="nav-item"><%= nav_tab 'Home', root_path, class: "nav-link ms-lg-5", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'Terms', terms_path, class: "nav-link", current_page: current_page %></li>
            <li class="nav-item"><%= nav_tab 'Contacts', contacts_path, class: "nav-link me-lg-5", current_page: current_page %></li>
          </ul>

          <% if user_signed_in? %>
            <!-- Корзина -->
            <div class="me-3">
              <% if current_order.order_items.size > 0 %>
                <%= link_to cart_path, class: 'text-dark text-decoration-none' do %>
                  <%= "#{current_user.username}'s cart" %> <span class="badge bg-danger"><%= @order_items.count if @order_items.present? %></span>
                <% end %>
              <% else %>
                <%= link_to cart_path, class: 'text-muted text-decoration-none' do %>
                  <span><%= "#{current_user.username}'s cart" %></span> <span class="badge bg-info text-dark">empty</span>
                <% end %>
              <% end %>
            </div>

            <!-- Дропдаун пользователя -->
            <div class="dropdown">
              <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <%= user_avatar(current_user, 40) %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end text-small shadow px-5" aria-labelledby="dropdownUser1">
                <li><%= nav_tab 'Profile', account_path(current_user.username), class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'Store', store_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'Owned Gadgets', owned_gadgets_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'MacBooks', makbooks_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'iMacs', imacs_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'iPads', ipads_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'AirPods', airpods_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'Apple Watches', apple_watches_path, class: "dropdown-item", current_page: current_page %></li>
                <li><%= nav_tab 'Posts', posts_path, class: 'dropdown-item', current_page: current_page %></li>
                <li><%= nav_tab 'Articles', articles_path, class: 'dropdown-item', current_page: current_page %></li>
                <li><%= nav_tab 'New Post', new_post_path, class: 'dropdown-item', current_page: current_page %></li>
                <li><%= nav_tab 'New Article', new_article_path, class: 'dropdown-item', current_page: current_page %></li>

                <% @universities.each do |university| %>
                  <li><%= nav_tab university.title, university_path(university), class: 'dropdown-item', current_page: current_page %></li>
                <% end %>

                <li><%= nav_tab 'Settings', edit_user_registration_path, class: "dropdown-item", current_page: current_page %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= nav_tab 'Sign out', destroy_user_session_path, method: :delete, class: "dropdown-item text-danger", current_page: current_page %></li>
              </ul>
            </div>
          <% else %>
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to 'Sign In', new_user_session_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %></li>
            </ul>
          <% end %>

        </div>
      </div>
    </nav>
  </header>
<% end %>
