<% provide :page_title, 'iPhone Defects' %>
<% currently_at 'iPhone Defects' %>

<div class="container pt-5 pb-5">

  <div class="bg-white shadow p-4 col-12">

    <h4 class="display-3 mb-5">Defects</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Title</th>
          <th>Modules</th>
          <th>Description</th>
          <th>Images</th>
          <th>Videos</th>
          <th colspan="3">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @defects.each do |defect| %>
          <tr>
            <td class="align-middle"><%= defect.id %></td>
            <td class="align-middle"><%= defect.title %></td>
            <td class="align-middle"><%= defect.modules %></td>
            <td class="align-middle"><%= defect.description %></td>

            <td class="align-middle">
              <% defect.images.each do |image| %>
                <%= image_tag(image.url, width: '30', class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle">
              <% defect.videos.each do |video| %>
                <%= video_tag(video.url, width: '40', height: '40', controls: true, class: 'rounded') %>
              <% end %>
            </td>

            <td class="align-middle"><%= link_to 'Show', defect, class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Edit', edit_defect_path(defect), class: 'text-decoration-none' %></td>
            <td class="align-middle"><%= link_to 'Destroy', defect, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New defect', new_defect_path, class: 'text-decoration-none' %>
  </div>
</div>
